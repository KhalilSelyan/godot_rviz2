env.add_source_files(env.modules_sources, "register_types.cpp")

env.Append(CPPPATH=["include", ros_include_path, autoware_auto_perception_msgs_include_path, autoware_auto_planning_msgs_include_path, autoware_auto_vehicle_msgs_include_path])

env.Append(LIBPATH=[ros_lib_path, autoware_auto_perception_msgs_lib_path, autoware_auto_planning_msgs_lib_path, autoware_auto_vehicle_msgs_lib_path])

env.Append(CCFLAGS=[cpp_version])

