# SCsub

Import('env')

ros_distro = "galactic"
cpp_version = "-std=c++17"
autoware_include_path = "/home/yukky/workspace/tutorial/autoware"
ros_include_path = "/opt/ros/" + ros_distro + "/include"
ros_lib_path = "/opt/ros/" + ros_distro + "/lib"

